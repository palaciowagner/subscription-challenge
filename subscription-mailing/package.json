{
  "name": "subscription-mailing",
  "version": "1.0.0",
  "description": "Subscription Mailing Service",
  "main": "app.ts",
  "author": "Wagner Palacio",
  "license": "MIT",
  "scripts": {
    "start": "yarn run build && cross-env NODE_ENV=production node dist/server.js",
